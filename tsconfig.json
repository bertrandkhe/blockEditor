{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "src/main.tsx",
    "src/App.tsx",
    "webpack.config.js"
  ]
}
