{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strict": true,
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "paths": {
      "@/components/*": ["components/*"],
      "@/types/*": ["types/*"],
      "@/blocks/*": ["blocks/*"]
    }
  }
}